@model IEnumerable<AUYeni.Models.Blog.BlogPost>
@{
    Layout = "_AdminLayout";
    ViewData["Title"] = "Blog Posts";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2>Blog Posts</h2>
    <a href="/admin/blog/create" class="btn btn-primary">Create New Post</a>
</div>

<table class="table table-striped">
    <thead>
        <tr>
            <th>ID</th>
            <th>Title (TR)</th>
            <th>Title (EN)</th>
            <th>Views</th>
            <th>Created</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var post in Model)
        {
            <tr>
                <td>@post.Id</td>
                <td>@post.TitleTr</td>
                <td>@post.TitleEn</td>
                <td>@post.ViewCount</td>
                <td>@post.CreatedAt.ToString("yyyy-MM-dd")</td>
                <td>
                    <div class="admin-actions">
                        <a href="/admin/blog/edit/@post.Id" class="btn btn-sm btn-warning">Edit</a>
                        <form method="post" action="/admin/blog/delete/@post.Id" style="display:inline;">
                            <button type="submit" class="btn btn-sm btn-danger" onclick="return confirm('Are you sure?')">Delete</button>
                        </form>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>

