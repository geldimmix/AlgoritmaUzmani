@model AUYeni.Models.Dictionary.DictionaryNamespace
@{
    Layout = "_AdminLayout";
    ViewData["Title"] = "Create Namespace";
}

<h2>Yeni Sözlük Namespace Oluştur</h2>

@if (ViewBag.Error != null)
{
    <div class="alert alert-danger">@ViewBag.Error</div>
}

<form method="post" action="/admin/dictionary/namespace/create">
    <div class="mb-3">
        <label class="form-label">Namespace Adı (Türkçe)</label>
        <input type="text" name="NameTr" class="form-control" required />
        <small class="text-muted">Örnek: Programlama Terimleri</small>
    </div>
    
    <div class="mb-3">
        <label class="form-label">Açıklama (Türkçe)</label>
        <textarea name="DescriptionTr" class="form-control" rows="3"></textarea>
    </div>
    
    <div class="d-flex gap-2">
        <button type="submit" class="btn btn-primary">Oluştur</button>
        <a href="/admin/dictionary" class="btn btn-secondary">İptal</a>
    </div>
</form>

