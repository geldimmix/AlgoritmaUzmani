@model AUYeni.Models.Dictionary.DictionaryEntry
@{
    Layout = "_AdminLayout";
    ViewData["Title"] = "Sözlük Terimi Düzenle";
}

<div class="card">
    <div class="card-body">
        @if (ViewBag.Error != null)
        {
            <div class="alert alert-danger">
                <i class="fas fa-exclamation-circle me-2"></i>
                @ViewBag.Error
            </div>
        }
        
        <form method="post" action="/admin/dictionary/entry/edit/@Model.Id">
            <div class="row">
                <div class="col-md-6 mb-3">
                    <label class="form-label">
                        <i class="fas fa-tag me-1"></i>
                        Terim (Türkçe)
                    </label>
                    <input type="text" name="TermTr" class="form-control" value="@Model.TermTr" required />
                </div>
                
                <div class="col-md-6 mb-3">
                    <label class="form-label">
                        <i class="fas fa-bookmark me-1"></i>
                        Kısa Açıklama (Türkçe)
                    </label>
                    <input type="text" name="ShortDescriptionTr" class="form-control" value="@Model.ShortDescriptionTr" required />
                </div>
            </div>
            
            <hr />
            
            <h5 class="mb-3">
                <i class="fas fa-file-alt me-2"></i>
                Detaylı Makale
            </h5>
            
            <div class="row">
                <div class="col-md-12 mb-3">
                    <label class="form-label">
                        <i class="fas fa-heading me-1"></i>
                        Makale Başlığı (Türkçe)
                    </label>
                    <input type="text" name="TitleTr" class="form-control" value="@Model.TitleTr" required />
                </div>
                
                <div class="col-md-12 mb-3">
                    <label class="form-label">
                        <i class="fas fa-align-left me-1"></i>
                        Makale Açıklaması (Türkçe)
                    </label>
                    <textarea name="DescriptionTr" class="form-control" rows="3">@Model.DescriptionTr</textarea>
                </div>
                
                <div class="col-md-12 mb-3">
                    <label class="form-label">
                        <i class="fas fa-pen me-1"></i>
                        Makale İçeriği (Türkçe)
                    </label>
                    <textarea id="ContentTr" name="ContentTr" class="form-control" rows="15" required>@Model.ContentTr</textarea>
                </div>
            </div>
            
            <input type="hidden" name="NamespaceId" value="@Model.NamespaceId" />
            <input type="hidden" name="CreatedAt" value="@Model.CreatedAt" />
            
            <div class="d-flex gap-2 mt-4">
                <button type="submit" class="btn btn-success">
                    <i class="fas fa-save me-2"></i>
                    Güncelle
                </button>
                <a href="/admin/dictionary/namespace/@Model.NamespaceId/entries" class="btn btn-secondary">
                    <i class="fas fa-times me-2"></i>
                    İptal
                </a>
            </div>
        </form>
    </div>
</div>

