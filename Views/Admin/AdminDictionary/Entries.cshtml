@model IEnumerable<AUYeni.Models.Dictionary.DictionaryEntry>
@{
    Layout = "_AdminLayout";
    ViewData["Title"] = "Dictionary Entries";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h2>Sözlük Terimleri</h2>
        <p class="text-muted">Namespace ID: @ViewBag.NamespaceId</p>
    </div>
    <div>
        <a href="/admin/dictionary/entry/create/@ViewBag.NamespaceId" class="btn btn-primary">Yeni Terim Ekle</a>
        <a href="/admin/dictionary" class="btn btn-secondary">Namespace'lere Dön</a>
    </div>
</div>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Terim (TR)</th>
            <th>Terim (EN)</th>
            <th>Kısa Açıklama</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var entry in Model)
        {
            <tr>
                <td>@entry.TermTr</td>
                <td>@entry.TermEn</td>
                <td>@entry.ShortDescriptionEn</td>
                <td>
                    <div class="admin-actions">
                        <a href="/admin/dictionary/entry/edit/@entry.Id" class="btn btn-sm btn-warning">Düzenle</a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>

