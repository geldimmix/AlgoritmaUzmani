@model IEnumerable<AUYeni.Models.Education.Lesson>
@{
    Layout = "_AdminLayout";
    ViewData["Title"] = "Lessons";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h2>Dersler</h2>
        <p class="text-muted">Section ID: @ViewBag.SectionId</p>
    </div>
    <div>
        <a href="/admin/education/lesson/create/@ViewBag.SectionId" class="btn btn-primary">Yeni Ders Ekle</a>
        <a href="/admin/education" class="btn btn-secondary">Kurslara Dön</a>
    </div>
</div>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Sıra</th>
            <th>Başlık (TR)</th>
            <th>Başlık (EN)</th>
            <th>Süre (dk)</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var lesson in Model)
        {
            <tr>
                <td>@lesson.Order</td>
                <td>@lesson.TitleTr</td>
                <td>@lesson.TitleEn</td>
                <td>@lesson.DurationMinutes</td>
                <td>
                    <div class="admin-actions">
                        <a href="/admin/education/lesson/edit/@lesson.Id" class="btn btn-sm btn-warning">Düzenle</a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>

