@model AUYeni.Models.Education.Section
@{
    Layout = "_AdminLayout";
    ViewData["Title"] = "Create Section";
}

<h2>Create New Section</h2>
<p class="text-muted">Course ID: @ViewBag.CourseId</p>

@if (ViewBag.Error != null)
{
    <div class="alert alert-danger">@ViewBag.Error</div>
}

<form method="post" action="/admin/education/section/create/@ViewBag.CourseId">
    <div class="mb-3">
        <label class="form-label">Section Title (Turkish)</label>
        <input type="text" name="TitleTr" class="form-control" required />
        <small class="text-muted">Example: Bağlı Listeler</small>
    </div>
    
    <div class="mb-3">
        <label class="form-label">Description (Turkish)</label>
        <textarea name="DescriptionTr" class="form-control" rows="3"></textarea>
    </div>
    
    <div class="mb-3">
        <label class="form-label">Order</label>
        <input type="number" name="Order" class="form-control" value="1" required />
        <small class="text-muted">Determines the display order of sections</small>
    </div>
    
    <div class="d-flex gap-2">
        <button type="submit" class="btn btn-primary">Create Section</button>
        <a href="/admin/education/course/@ViewBag.CourseId/sections" class="btn btn-secondary">Cancel</a>
    </div>
</form>

