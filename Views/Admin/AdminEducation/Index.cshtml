@model IEnumerable<AUYeni.Models.Education.Course>
@{
    Layout = "_AdminLayout";
    ViewData["Title"] = "Courses";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2>Education Courses</h2>
    <a href="/admin/education/course/create" class="btn btn-primary">Create New Course</a>
</div>

<table class="table table-striped">
    <thead>
        <tr>
            <th>ID</th>
            <th>Title (TR)</th>
            <th>Title (EN)</th>
            <th>Level</th>
            <th>Created</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var course in Model)
        {
            <tr>
                <td>@course.Id</td>
                <td>@course.TitleTr</td>
                <td>@course.TitleEn</td>
                <td>@course.Level</td>
                <td>@course.CreatedAt.ToString("yyyy-MM-dd")</td>
                <td>
                    <div class="admin-actions">
                        <a href="/admin/education/course/@course.Id/sections" class="btn btn-sm btn-info">Sections</a>
                        <a href="/admin/education/course/edit/@course.Id" class="btn btn-sm btn-warning">Edit</a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>

