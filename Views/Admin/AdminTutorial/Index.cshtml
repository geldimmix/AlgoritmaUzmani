@model IEnumerable<AUYeni.Models.Tutorial.Tutorial>
@{
    Layout = "_AdminLayout";
    ViewData["Title"] = "Tutorials";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2>Tutorial'lar</h2>
    <a href="/admin/tutorial/create" class="btn btn-primary">Yeni Tutorial Oluştur</a>
</div>

<table class="table table-striped">
    <thead>
        <tr>
            <th>ID</th>
            <th>Başlık (TR)</th>
            <th>Başlık (EN)</th>
            <th>Zorluk</th>
            <th>Oluşturma</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var tutorial in Model)
        {
            <tr>
                <td>@tutorial.Id</td>
                <td>@tutorial.TitleTr</td>
                <td>@tutorial.TitleEn</td>
                <td>@tutorial.Difficulty</td>
                <td>@tutorial.CreatedAt.ToString("yyyy-MM-dd")</td>
                <td>
                    <div class="admin-actions">
                        <a href="/admin/tutorial/@tutorial.Id/sections" class="btn btn-sm btn-info">Bölümler</a>
                        <a href="/admin/tutorial/edit/@tutorial.Id" class="btn btn-sm btn-warning">Düzenle</a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>

